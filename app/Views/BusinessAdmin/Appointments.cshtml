@model scheapp.app.Models.View.AppointmentsVM
@{
    Layout = "_BusinessLayout";
}
<input type="hidden" id="hdnBusinessId" value="@Html.Raw(Model.BusinessId)"/>
<div class="text-center mt-3">
    <div class="row">
        <div class="col-3 col-lg-2 d-flex pt-2">
            <div style="margin-right:5px;">Today</div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" onchange="TodayCheckboxCheck()" id="chkbxAppointmentsToday">
            </div>
        </div>
        <div class="col-3 col-lg-2 d-flex pt-2">
            <div style="margin-right:5px;">All</div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" onchange="AllDateCheckboxCheck()" id="chkbxAppointmentsAllDate">
            </div>
        </div>
        <div class="col-6 col-lg-2 ">
            <input id="txtbxAppointmentsSelectedDate" class="form-control" type="date" onchange="AppointmentsFilterByDate()" />
        </div>
    </div>
    <div id="div_DisplayAppointmentList"  class="row">
    </div>
</div>
<script src="~/js/businessadmin/appointments.js"></script>