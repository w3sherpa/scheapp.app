@model scheapp.app.Models.Data.DspModels.ProfessionalBusinessDetailDsp

@{
    ViewData["Title"] = "EdidProfessional";
    string isBusinessProfessionalChecked = "";
    if (Model.BusinessId != null) isBusinessProfessionalChecked = "checked";
}

<h1>EdidProfessional</h1>

<h4>ProfessionalBusinessDetailDsp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EdidProfessional">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessionalRole" class="control-label"></label>
                <input asp-for="ProfessionalRole" class="form-control" />
                <span asp-validation-for="ProfessionalRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" class="form-check" @isBusinessProfessionalChecked />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
